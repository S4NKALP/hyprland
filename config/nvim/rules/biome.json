{
  "$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 120,
    "indentStyle": "space",
    "indentWidth": 2,
    "formatWithErrors": true
  },
  "javascript": {
    "globals": [
      "ObjC", // JXA variable
      "Application",
      "delay",
      "Path",
      "$",
      "dv" // dataview
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true
    }
  },
  "json": {
    "parser": { "allowComments": true } // for `tsconfig.json`
  }
}
